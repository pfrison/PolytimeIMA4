<resources>

    <!-- *********** Light themes -->
    <style name="LightBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/light_text</item>
        <item name="android:windowBackground">@color/light_background</item>
        <item name="android:textColorPrimary">@color/light_text</item>
        <item name="android:textColorPrimaryInverse">@color/light_background</item>
        <item name="android:textColorSecondary">@color/light_text</item>

        <item name="android:listViewStyle">@style/LightBaseTheme.ListView</item>
        <item name="spinnerStyle">@style/LightBaseTheme.SpinnerPopup</item>
        <item name="android:itemBackground">@color/light_popup_background</item>
    </style>
    <style name="LightBaseTheme.SpinnerPopup" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@color/light_popup_background</item>
    </style>
    <style name="LightBaseTheme.ListView" parent="Widget.AppCompat.ListView">
        <item name="android:background">@color/light_background</item>
        <item name="android:cacheColorHint">@color/light_background</item>
    </style>

    <!-- **** Red -->
    <style name="LightRedTheme" parent="LightBaseTheme">
        <item name="colorPrimary">@color/colorRedPrimary</item>
        <item name="colorPrimaryDark">@color/colorRedPrimaryDark</item>
        <item name="colorAccent">@color/colorRedAccent</item>
    </style>

    <!-- **** Magenta -->
    <style name="LightMagentaTheme" parent="LightBaseTheme">
        <item name="colorPrimary">@color/colorMagentaPrimary</item>
