    <!-- *********** Dark themes -->
    <style name="DarkBaseTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:colorForeground">@color/dark_text</item>
        <item name="android:textColorPrimary">@color/dark_text</item>
        <item name="android:textColorPrimaryInverse">@color/dark_background</item>
        <item name="android:textColorSecondary">@color/dark_text</item>
        <item name="colorControlNormal">@color/dark_text</item>

        <item name="buttonStyle">@style/DarkBaseTheme.Button</item>
        <item name="spinnerStyle">@style/DarkBaseTheme.Spinner</item>
        <item name="alertDialogTheme">@style/DarkBaseTheme.AlertDialog</item>

        <item name="android:textColor">@color/dark_text</item>
        <item name="android:itemBackground">@color/dark_popup_background</item>
    </style>
    <style name="DarkBaseTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:background">@drawable/dark_button_background</item>
    </style>
    <style name="DarkBaseTheme.Spinner" parent="Widget.AppCompat.Spinner">
